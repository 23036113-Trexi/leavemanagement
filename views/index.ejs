<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - GeoLah Leave Management</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <header class="login-header">
                <div class="company-logo">
                    <img src="/images/icon.png" alt="Company Logo">
                </div>
                <h2>Leave Management System</h2>
                <p>Employee Login Portal</p>
            </header>

            <main class="login-main">
                <% if (error) { %>
                    <div class="error-message">
                        <span class="error-icon">ï¿½</span>
                        <%= error %>
                    </div>
                <% } %>

                <% if (success) { %>
                    <div class="success-message">
                        <span class="success-icon">âœ“</span>
                        <%= success %>
                    </div>
                <% } %>

                <form class="login-form" action="/login" method="POST">
                    <div class="form-group">
                        <label for="email" class="form-label">Email Address</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            class="form-input" 
                            placeholder="Enter your email address"
                            required
                            autocomplete="email"
                        >
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="form-input" 
                            placeholder="Enter your password"
                            required
                            autocomplete="current-password"
                        >
                    </div>


                    <button type="submit" class="login-btn">
                        Sign In
                    </button>
                </form>

                <div class="forgot-password-section">
                    <a href="/forgot-password" class="forgot-password-link">
                        Forgot your password?
                    </a>
                </div>
            </main>

            <footer class="login-footer">
                <p>&copy; 2025 GeoLah. All rights reserved.</p>
            </footer>
        </div>
    </div>

    <script>
        // Add loading state to form submission
        document.querySelector('.login-form').addEventListener('submit', function(e) {
            const button = document.querySelector('.login-btn');
            
            button.disabled = true;
        });

        // Clear error message on input focus
        const inputs = document.querySelectorAll('.form-input');
        inputs.forEach(input => {
            input.addEventListener('focus', function() {
                const errorMessage = document.querySelector('.error-message');
                if (errorMessage) {
                    errorMessage.style.opacity = '0.5';
                }
            });
        });
    </script>
</body>
</html>